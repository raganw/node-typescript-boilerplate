{
  "name": "node-typescript-boilerplate",
  "version": "0.0.1",
  "description": "Node TypeScript Boilerplate",
  "type": "module",
  "engines": {
    "node": ">= 20.9 < 21"
  },
  "devDependencies": {
    "@eslint/js": "~9.10",
    "@types/eslint__js": "~8.42",
    "@types/node": "~20",
    "@typescript-eslint/parser": "~8.5",
    "@vitest/coverage-v8": "~2.1",
    "@vitest/eslint-plugin": "~1.1",
    "eslint": "~9.10",
    "eslint-config-prettier": "~9.1",
    "eslint-plugin-unicorn": "^55.0.0",
    "globals": "~15.9",
    "prettier": "~3.3",
    "rimraf": "~6.0",
    "ts-api-utils": "~1.3",
    "typescript": "~5.5",
    "typescript-eslint": "~8.5",
    "vitest": "~2.1"
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "start": "node build/src/main.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage.enabled --coverage.all",
    "format": "prettier \"src/**/*.{ts,mts}\" --write",
    "prettier:check": "prettier \"src/**/*.{ts,mts}\" --check",
    "test:watch": "vitest unit"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "tslib": "~2.7"
  }
}
